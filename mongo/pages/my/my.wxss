.container{
    background:#a02503;
    width:100%;
    height:100%;
}

.user-avatar{
    display:block;
    margin:30px auto;
    width:270px;
    height:350px;
}

.user text{
    text-align:center;
    color:#fff;
    width:100%;
    display:inline-block;
}

.my {
    background: #eee;
    color: #555;
    font-size: 30rpx;
}

.my >view{
    background: #fff;
}

.my .top{
    overflow: hidden;
    padding: 30rpx;
    border: 1rpx solid #ddd
}

.my .top image{
    width: 100rpx;
    height: 100rpx;
    margin: 0;
    padding: 0;
    float: left;
    margin-right: 40rpx;
    border-radius: 50%
}

.my .like{
    border-top: 1px solid #eee;
    margin-bottom: 20rpx;
}

.my .like span{
    width: 33.333%;
    display: inline-block;
    text-align: center;
    padding: 28rpx 0;
}

.my .like span text{
    display: block;
}

.list view {
    padding: 30rpx;
    height: 50rpx; 
    position: relative;
}
.list view span{
    position: relative;
    /* top: -10rpx; */
}
.list view .img{
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
    vertical-align: middle;
}

.list view .icon{
    width: 50rpx;
    height: 50rpx;
    float: right;
}

    
