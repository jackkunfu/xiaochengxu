.person{
  font-size: 28rpx;
  color: #666;
}

.img-ctn{
  height: 200rpx;
  overflow: hidden;
  position: relative;
}

.center-center{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.img-ctn image{
  width: 100%;
  font-size: 26rpx;
} 

.item{
  padding: 10rpx 30rpx;
  min-height: 200rpx;
}

.touxiang{
  width: 150rpx;
  height: 150rpx;
  margin-top: -80rpx;
  border-radius: 14rpx;
  position: relative;
  z-index: 1;
}

.name{
  font-size: 36rpx;
  color: #000;
  line-height: 1.5;
  margin-top: 16rpx;
}

.title{
  color: #000;
  font-size: 32rpx;
  line-height: 2;
}

.time{
  float: right;
  color: #999;
}

.sex, .xingzuo{
  display: inline-block;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #fff;
  margin-top: 10rpx;
  margin-right: 10rpx;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
}

.sex{
  background: blue;
  margin-top: -50rpx;
}

.xingzuo{
  background: #339999;
}

.introduce{
    margin-top: 20rpx;
}

.motto{
  line-height: 80rpx;
}

.img-list{
    white-space: nowrap;
    overflow: auto;
}

.img-list image{
    width: 120rpx;
    height: 120rpx;
    margin: 10rpx 20rpx 10rpx 0;
}

::webkit-scrollbar {
    width: 0!important;
    height: 0!important;
    color: transparent;
}

.it{
  background: #eee;
  display: inline-block;
  border-radius: 10rpx;
  min-width: 50rpx;
  text-align: center;
  padding: 0 26rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  line-height: 40rpx;
}